/**index.wxss**/
page {
  height: 100%;
  position: relative;
  left: 0;
  top: 0;
  bottom: 0;
  overflow: hidden;
}

.container {
  width: 100%;
  height: 100%;
  padding: 40rpx 60rpx;
  font-size: 36rpx;
  font-weight: bold;
  color: #000;
  box-sizing: border-box;
}

.label {
  width: 100%;
  padding: 20rpx 0;
  font-size: 40rpx;
}

.value {
  width: 80%;
  display: flex;
  justify-content: space-between;
}

.value text {
  width: 60rpx;
  height: 80rpx;
  display: inline-flex;
  justify-content: center;
  align-items: center;
  background: #eee;
  box-sizing: border-box;
  border-radius: 10rpx;
}

.value text.active {
  border: 1px solid lightskyblue ;
}